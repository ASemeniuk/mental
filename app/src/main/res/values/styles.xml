<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/Button</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">@dimen/button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/button_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_vertical_padding</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <style name="Button.Primary">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorInvertedText</item>
    </style>

    <style name="Button.Primary.Inverted">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorInvertedText</item>
    </style>

    <style name="Button.Secondary" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorSecondary</item>
        <item name="android:textColorPrimary">@color/colorInvertedText</item>
    </style>


</resources>
